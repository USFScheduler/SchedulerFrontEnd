{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react", // Use "react-jsx" if using React 17+
    "esModuleInterop": true, // Enables default imports for CommonJS modules
    "allowSyntheticDefaultImports": true, // Allows default imports for modules without default exports
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}